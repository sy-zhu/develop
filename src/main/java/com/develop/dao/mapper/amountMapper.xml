<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.develop.dao.AmountMgrDao">

	<!-- 金额改变 -->
	<select id="updateAmount" resultType="User">
		update user_info  set  amount=amount+#{amount} where id =#{id}
	</select>


</mapper>